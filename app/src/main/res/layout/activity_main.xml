<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.dn.accounting.MainActivity">

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/refresh_listview">

    </com.handmark.pulltorefresh.library.PullToRefreshListView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/accounts_list">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Cumulative cost"
            android:layout_margin="1dp"
            android:lines="2"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:background="#99dd"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/cost_textview"
            android:layout_margin="1dp"
            android:lines="2"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:background="#99dd"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:id="@+id/edit_events"
            android:hint="Events"
            android:lines="2"
            android:textSize="15sp"
            android:background="#99dd"
            android:gravity="center"
            android:layout_margin="1dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/edit_cost"
            android:hint="Cost"
            android:lines="2"
            android:layout_margin="1dp"
            android:background="#99dd"
            android:gravity="center"
            android:textSize="15sp"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitbtn"
        android:text="Submit"/>

</LinearLayout>
